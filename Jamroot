import os ;
using python ;

local BOOST_ROOT = [ os.environ BOOST_ROOT ] ; 
if $(BOOST_ROOT) = ""
{
    BOOST_ROOT = "/usr/local/share/boost" ;
}

project siblings
    : requirements
        <variant>release:<warnings>off ;

use-project /boost : $(BOOST_ROOT) ;

build-project src/cpp/siblings ;

alias install : install-lib ;
install install-lib : src/cpp/siblings
    : <location>dist/siblings <install-type>LIB ;
